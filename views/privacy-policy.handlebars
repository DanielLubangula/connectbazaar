    <ul>
      <li>Adresse IP</li>
      <li>Type de navigateur</li>
      <li>Pages consultées</li>
      <li>Temps passé sur le site</li>
    </ul>
  </section>

  <!-- Sections suivantes similaires -->

  <section id="contact">
