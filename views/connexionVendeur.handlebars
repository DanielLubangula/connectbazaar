<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #1e2a3a;
        color: #ffffff;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .login-container {
        max-width: 400px;
        margin: auto;
        padding: 2rem;
        box-sizing: border-box;
    }

    .login-card {
        background-color: #34495e;
        border-radius: 10px;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .login-title {
        text-align: center;
        color: #5ce1e6;
        margin-bottom: 2rem;
        font-size: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        margin-bottom: 0.5rem;
        color: #a8b2bc;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #5ce1e6;
        border-radius: 5px;
        background-color: #2c3e50;
        color: #ffffff;
        box-sizing: border-box;
    }

    .form-input::placeholder {
        color: #a8b2bc;
    }

    .remember-me {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .remember-me input[type="checkbox"] {
        accent-color: #5ce1e6;
    }

    .login-button {
        width: 100%;
        background-color: #5ce1e6;
        color: #1e2a3a;
        border: none;
        padding: 0.75rem;
        border-radius: 5px;
        cursor: pointer;
        font-weight: bold;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .login-button:hover {
        background-color: #4bb8bd;
    }

    .form-footer {
        text-align: center;
        margin-top: 1.5rem;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        font-size: 15px;
    }

    .form-footer a {
        color: #5ce1e6;
        text-decoration: none;
        margin: 0.5rem 0;
    }

    .form-footer a:hover {
        text-decoration: underline;
    }

    .seller-icon {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .seller-icon svg {
        width: 64px;
        height: 64px;
        fill: #5ce1e6;
        margin: auto;
    }

    .msgError {
        text-align: center;
        color: rgb(190, 91, 91);
        text-shadow: 0px 0px 1px rgb(5, 5, 5);
    }

    /* Styles pour les petits écrans */
    @media (max-width: 480px) {
        .login-container {
            padding: 1rem;
        }

        .login-card {
            padding: 1.5rem;
        }

        .login-title {
            font-size: 1.25rem;
        }

        .form-footer {
            flex-direction: column;
            gap: 0.5rem;
        }

        .form-footer span {
            display: none; /* Cache le séparateur pour les petits écrans */
        }

        .login-button {
            font-size: 0.9rem;
        }

        .form-input {
            font-size: 0.9rem;
        }
    }

     .spinner {
            width: 20px;
            height: 20px;
            border: 3px solid #f3f3f3;
            border-top: 3px solid #3498db;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-left: 10px;
            display: inline-block;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }

        .button-container {
            display: flex;
            align-items: center;
        }
</style>

</head>

<body>
    <div class="login-container">
        <div class="login-card">
            <div class="seller-icon">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
            </div>
            <h2 class="login-title">Espace Vendeur</h2>

            <form id="sellerLoginForm">
                <div class="form-group">
                    <label class="form-label">Email professionnel</label>
                    <input type="email" class="form-input" name="email" required>
                </div>

                <div class="form-group">
                    <label class="form-label">Mot de passe</label>
                    <input type="password" class="form-input" name="password" required>
                </div>

                <div class="remember-me">
                    <input type="checkbox" id="remember" name="rememberMe">
                    <label for="remember">Se souvenir de moi</label>
                </div>
                <p class="msgError" style="color: red;"></p>

                <div class="button-container">
                    <button type="submit" class="login-button">Se connecter</button>
                    <div class="spinner" style="display: none;"></div>
                </div>

                <div class="form-footer">
                    <a href="/deliver/seller/forgot-password">Mot de passe oublié ?</a>
                    <span style="margin: 5px;">|</span>
                    <a href="/deliver/registerVendor">Devenir vendeur</a>
                </div>
            </form>
        </div>
    </div>

    <script>
      const form = document.getElementById('sellerLoginForm');
const submitButton = form.querySelector('.login-button');
const spinner = form.querySelector('.spinner');
const msgError = document.querySelector('.msgError');

form.addEventListener('submit', async (e) => {
    e.preventDefault(); // Empêche la soumission classique du formulaire

    const formData = new FormData(form); // Récupère les données du formulaire
    const jsonData = Object.fromEntries(formData.entries()); // Convertit en objet JSON

    submitButton.style.disabled = true; // Désactiver le bouton
    spinner.style.display = 'block'; // Afficher le spinner
    msgError.textContent = ''; // Réinitialise les messages d'erreur

    try {
        const response = await fetch('/deliver/loginGestion', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(jsonData),
        });

        const data = await response.json();

        if (!response.ok) {
            // Afficher les erreurs si la réponse n'est pas OK
            msgError.textContent = data.message || 'Une erreur est survenue.';
            return;
        }

        // Redirection en cas de succès
        if (data.redirectUrl) {
            window.location.href = data.redirectUrl;
        }
    } catch (err) {
        console.error('Erreur lors de la requête :', err);
        msgError.textContent = 'Erreur réseau. Veuillez réessayer plus tard.';
    } finally {
        submitButton.disabled = false; // Réactiver le bouton
        spinner.style.display = 'none'; // Masquer le spinner
    }
});

    </script>

</body>

